<vn.edu.hcmut.its.tripmaester.ui.activity.FullDrawerlayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/drawer_layout_main_screen"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.activity.MainActivity">
     
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	
        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:padding="5dp"
            android:background="@color/blue_zalo">
            
            <ImageButton
                android:id="@+id/img_left_menu"
            	android:layout_height="40dp"
            	android:layout_width="40dp"
                android:onClick="onClickLeftMenu"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
            	android:layout_marginLeft="5dp"
                android:src="@drawable/menu_left"
				android:background="@color/blue_zalo" />
             
			<TextView
				android:id="@+id/lbl_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:background="@color/blue_zalo"
				android:text="TRIP MAESTER"
				android:textStyle="bold|italic"
				android:textColor="#FFFFFF" />

			<ImageButton
				android:id="@+id/img_right_menu"
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:onClick="onClickRightMenu"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:src="@drawable/menu_right"
				android:background="@color/blue_zalo"/>
            
        </RelativeLayout>
        
		<!-- The map content view -->
		<FrameLayout
			android:id="@+id/frame_contener"
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:paddingTop="42dp"/>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab_btn_capture"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center|end"
			app:backgroundTint="@color/com_facebook_button_send_background_color"
			android:src ="@drawable/ic_add_a_photo_white_24dp"/>

		<include layout="@layout/fab_layout" />
    </RelativeLayout>
     
    <!-- The left menu --> 
    <ListView
        android:id="@+id/left_drawer_menu"
        android:layout_width="300dp"
        android:layout_height="match_parent"        
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"       
        android:layout_gravity="left" 
        android:listSelector="@drawable/list_selector"
        android:background="@color/white"/>
        
    <!-- The right menu -->
    <ListView
		 android:id="@+id/right_drawer_menu"
		 android:layout_width="240dp"
		 android:layout_height="wrap_content"
		 android:layout_marginTop="32dp"
		 android:layout_gravity="right"
		 android:background="@color/white"
		 android:choiceMode="singleChoice"
		 android:dividerHeight="1dp"  
		 android:divider="@color/list_divider_dark" />
    
    <!-- Listview to display right map menu -->
    <ExpandableListView
        android:id="@+id/right_map_menu_expand_items"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp"        
        android:groupIndicator="@null" />
    
</vn.edu.hcmut.its.tripmaester.ui.activity.FullDrawerlayout>
