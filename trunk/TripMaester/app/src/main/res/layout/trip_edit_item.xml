<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:padding="10dp"
	android:background="@color/white">
    
    <!-- view user create trip and date create -->
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
		android:layout_marginBottom="10dp">
	    
	    <ImageView
	        android:id="@+id/list_edit_img_trip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/edit_trip"
			android:layout_marginRight="10dp"/>
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/edit_trip_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Di ha long"
	            android:textColor="@color/map_item_trip_blue" 
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/edit_trip_created_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="10/04"
	            android:textColor="@color/map_item_trip_gray"
	            android:textAppearance="?android:attr/textAppearanceSmall"  />
	    </LinearLayout>

   	</LinearLayout>

	<!-- info Time Trip -->
	 <LinearLayout
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:orientation="horizontal"
		 android:weightSum="2"
		 android:layout_marginBottom="10dp">

		 <ImageView
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:src="@drawable/calendar"
			 android:layout_marginLeft="42dp"
			 android:layout_gravity="center"/>

		 <TextView
			 android:id="@+id/edit_trip_start_date"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:layout_weight="1"
			 android:gravity="center"
			 android:textColor="@color/map_item_trip_gray" />
		 <TextView
			 android:id="@+id/edit_trip_finish_date"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:layout_weight="1"
			 android:gravity="center"
			 android:textColor="@color/map_item_trip_gray" />
	
	</LinearLayout>
	
	 <!-- info Place trip -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="2"
		android:layout_marginBottom="10dp">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/place_start"
			android:layout_marginLeft="42dp"
			android:layout_gravity="center"/>

		<TextView
			android:id="@+id/edit_trip_start_point"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/map_item_trip_gray" />
	
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="10dp">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/place_finish"
			android:layout_marginLeft="42dp"
			android:layout_gravity="center"/>

		<TextView
			android:id="@+id/edit_trip_finish_point"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/map_item_trip_gray" />

	</LinearLayout>

